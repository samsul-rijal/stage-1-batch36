<!DOCTYPE html>
<html lang="en">
<head>
    <title>Form Contact</title>
    <link rel="stylesheet" href="../assets/css/style.css">
    <link rel="stylesheet" href="../assets/css/contact.css">
    <script src="../assets/js/form.js"></script>
</head>
<body>
    
    <nav>
        <div class="nav-left">
            <ul>
                <img src="../assets/images/logo.png" alt="logo">
                <li>
                    <a href="/">Home</a>
                </li>
    
                <li>
                    <a href="/blog">Blog</a>
                </li>
            </ul>
        </div>

        <div class="nav-right">
            {{#if isLogin}}
                <a href="#" class="btn-auth">Hallo, {{user.name}}</a>
                <a href="/logout" class="btn-auth">Logout</a>  
            {{else}}
                <a href="/register" class="btn-auth">Register</a>
                <a href="/login" class="btn-auth">Login</a>
            {{/if}}

            <a href="/contact">Contact</a>
        </div>
    </nav>

    <div class="container-form">
        <form>
            <div>
                <label for="input-name">Name</label>
                <input type="text" id="input-name">
            </div>
    
            <div>
                <label for="input-email">Email</label>
                <input type="email" id="input-email">
            </div>
    
            <div>
                <label for="input-phone">Phone</label>
                <input type="number" id="input-phone">
            </div>
    
            <div>
                <label for="input-subject">Subject</label>
                <select id="input-subject">
                    <option value="">Select</option>
                    <option>Frontend</option>
                    <option>Backend</option>
                    <option>Fullstack</option>
                </select>
            </div>
    
            <div>
                <label for="input-message">Your Message</label>
                <textarea id="input-message"></textarea>
            </div>
    
            <button type="button" onclick="submitData()">Submit</button>
        </form>
    </div>

</body>
</html>